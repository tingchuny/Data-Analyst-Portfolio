/*
Queries that helped gained understanding of the dataset
*/


SELECT 
    age_group                                                  AS age_group,
    SUM(CASE WHEN gender = "male"    THEN tripduration END)    AS male_duration,
    SUM(CASE WHEN gender = "female"  THEN tripduration END)    AS female_duration,
    SUM(CASE WHEN gender = "unknown" THEN tripduration END)    AS other_duration,
    SUM(tripduration)                                          AS total_duration
FROM
    `cyclistic-315402.new_york_citibike.citibike_2015`     
GROUP BY 
    age_group
ORDER BY
    total_duration DESC;


WITH overall_data AS (

    SELECT 
        COUNT(*)             AS bike_trips_count,
        SUM(tripduration)    AS trip_duration_sum
    FROM
        `cyclistic-315402.new_york_citibike.citibike_2015`
    WHERE
        gender!= ''

)

SELECT
    gender                                                                          AS gender, 
    COUNT(*)                                                                        AS usage_count,
    COUNT(*) /          (SELECT bike_trips_count FROM overall_data) * 100           AS usage_count_ratio,
    SUM(tripduration)                                                               AS total_duration,
    SUM(tripduration) / (SELECT trip_duration_sum FROM overall_data) * 100          AS trip_duration_ratio
FROM 
    `cyclistic-315402.new_york_citibike.citibike_2015`
WHERE 
    gender != ''    
GROUP BY 
    gender;
